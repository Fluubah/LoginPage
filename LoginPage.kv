


<QuizManager>:
    Question1Screen:
        name: "question1"
    CorrectScreen:
        name :"correct"
    ErrorScreen:
        name:"error"


<Question1Screen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "North-most state of the US"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text:"Washington"
                background_normal: "Washington.png"
                on_release: root.answer_question(False)
            Button:
                text:"Alaska"
                background_normal : "Alaska.png"
                on_release: root.answer_question(True)
            Button:
                text: "Maine"
                background_normal : "Maine.png"
                on_release: root.answer_question(False)

<Question2Screen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "How many US states border the Pacific Ocean"
        BoxLayout:
            orientation: "horizontal"
            TextInput:
                id: number
                hint_text: "How many states border the Pacific Ocean"


<CorrectScreen>:
    BoxLayout:
        padding: 40
        orientation: "vertical"
        Label:
            font_size: 128
            color:0,1,0,1
            text:"Correct!"
        Button:
            background_color: 0,1,0,1
            text:"Next Question"
            on_release:
<ErrorScreen>:
    BoxLayout:
        padding: 40
        orientation: "vertical"
        Label:
            font_size: 128
            color:1,0,0,1
            text:"Incorrect"
        Button:
            background_color: 1,0,0,1
            text:"Retry"
            on_release: root.retry()